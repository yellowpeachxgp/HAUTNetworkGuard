#include <windows.h>
#include "resource.h"

// 版本信息
VS_VERSION_INFO VERSIONINFO
FILEVERSION     1,0,0,0
PRODUCTVERSION  1,0,0,0
FILEFLAGSMASK   VS_FFI_FILEFLAGSMASK
#ifdef _DEBUG
FILEFLAGS       VS_FF_DEBUG
#else
FILEFLAGS       0
#endif
FILEOS          VOS_NT_WINDOWS32
FILETYPE        VFT_APP
FILESUBTYPE     VFT2_UNKNOWN
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "080404b0"  // 简体中文, Unicode
        BEGIN
            VALUE "CompanyName",      "YellowPeach"
            VALUE "FileDescription",  "HAUT Network Guard - 校园网自动登录工具"
            VALUE "FileVersion",      "1.0.0.0"
            VALUE "InternalName",     "HAUTNetworkGuard"
            VALUE "LegalCopyright",   "Copyright (C) 2024 YellowPeach"
            VALUE "OriginalFilename", "HAUTNetworkGuard.exe"
            VALUE "ProductName",      "HAUT Network Guard"
            VALUE "ProductVersion",   "1.0.0.0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x804, 1200  // 简体中文, Unicode
    END
END

